<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="8dp"
    android:orientation="horizontal"

    android:background="#99B0B3"
    android:id="@+id/layoutSRL"
    >





    <!--    layout item-->

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        style="@style/CardView"
        android:background="#00E5FF"
        android:padding="10dp"
        android:gravity="center_vertical"
        >


        <LinearLayout
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/custom_item_gio_hang"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ivItemGioHang"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_4" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/tvTenSanPhamItemGioHang"

                android:text="NjnJa"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/tvGiaSanPhamItemGioHang"
                android:text="17.000 VND"
                android:fontFamily="serif"
                android:textColor="#C4BCBC"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/tvTongTien1SanPhamItemGioHang"
                android:fontFamily="serif"
                android:textColor="#08E22B"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTruSoLuongSanPhamItemGioHang"
                android:layout_width="30dp"

                android:layout_height="30dp"

                android:background="@drawable/custom_item_dau_tru"
                android:gravity="center"
                android:text="âˆ’"
                android:textColor="#00FA37" />

            <TextView
                android:id="@+id/tvSoLuongSanPhamCua1ItemGioHang"
                android:layout_width="20dp"

                android:layout_height="match_parent"


                android:fontFamily="serif"
                android:gravity="center"
                android:text="1" />

            <TextView
                android:id="@+id/tvThemSoLuongSanPhamItemGioHang"
                android:layout_width="30dp"

                android:layout_height="30dp"

                android:background="@drawable/custom_item_dau_cong"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/white" />


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutDelete"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"

        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="18dp"
            android:gravity="center"
            android:src="@drawable/icon_delete_gio_hang" />



    </LinearLayout>



</LinearLayout>